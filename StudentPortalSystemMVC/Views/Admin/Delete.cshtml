@model StudentPortalSystemMVC.Models.USER
@{
    ViewBag.Title = "Delete User";
}

<div class="container">
    <h2>Delete User</h2>
    <h3>Are you sure you want to delete this user?</h3>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Username</label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.USERNAME</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">First Name</label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.FIRST_NAME</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Last Name</label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.LAST_NAME</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.EMAIL</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Role</label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.ROLE</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Status</label>
            <div class="col-md-10">
                <p class="form-control-static">@Model.STATUS</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Department</label>
            <div class="col-md-10">
                <p class="form-control-static">@(Model.DepartmentId != null ? Model.DEPARTMENT.DEP_NAME : "Not Assigned")</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </div>
    </div>
</div>
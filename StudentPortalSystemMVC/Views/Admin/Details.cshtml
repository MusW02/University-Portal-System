@model StudentPortalSystemMVC.Models.USER
@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card p-4 mt-5 shadow-sm bg-light">
            <h2 class="text-center mb-4 text-primary">User Details</h2>

            <div class="row g-3">
                <div class="col-md-6">
                    <p><strong>Username:</strong> @Model.USERNAME</p>
                    <p><strong>First Name:</strong> @Model.FIRST_NAME</p>
                    <p><strong>Last Name:</strong> @Model.LAST_NAME</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.EMAIL</p>
                    <p><strong>Contact:</strong> @Model.CONTACT</p>
                    <p><strong>Address:</strong> @Model.ADDRESS</p>
                </div>
                <div class="col-12">
                    <p><strong>Role:</strong> @Model.ROLE</p>
                    <p><strong>Status:</strong> @Model.STATUS</p>
                    <p><strong>Department:</strong> @(Model.DepartmentId != null ? Model.DEPARTMENT.DEP_NAME : "Not Assigned")</p>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("Edit", "Admin", new { id = Model.ID })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<StudentPortalSystemMVC.Models.COURS>
@{
    ViewBag.Title = "Course List";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card p-4 mt-5 shadow-sm bg-light">
            <h2 class="text-center mb-4 text-primary">Course List</h2>
            <p class="text-end mb-3">
                <a href="@Url.Action("AddCourse", "Admin")" class="btn btn-primary">Add New Course</a>
            </p>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>Course Name</th>
                                <th>Credits</th>
                                <th>Department</th>
                                <th>Teacher</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => course.COURSE_NAME)</td>
                                    <td>@Html.DisplayFor(modelItem => course.CREDITS)</td>
                                    <td>@(course.DepartmentId != null ? course.DEPARTMENT.DEP_NAME : "Not Assigned")</td>
                                    <td>@(course.TEACHER != null && course.TEACHER.USER != null ? course.TEACHER.USER.USERNAME : "Not Assigned")</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "COURS", new { id = course.COURSE_ID })" class="btn btn-sm btn-primary me-1">Edit</a>
                                        <a href="@Url.Action("Details", "COURS", new { id = course.COURSE_ID })" class="btn btn-sm btn-info me-1">Details</a>
                                        <a href="@Url.Action("Delete", "COURS", new { id = course.COURSE_ID })" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center text-muted">No courses found.</p>
            }
        </div>
    </div>
</div>
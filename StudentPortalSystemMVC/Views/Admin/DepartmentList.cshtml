@model IEnumerable<StudentPortalSystemMVC.Models.DEPARTMENT>

@{
    ViewBag.Title = "Department List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card p-4 mt-5 shadow-sm bg-light">
            <h2 class="text-center mb-4 text-primary">Department List</h2>
            <p class="text-end mb-3">
                <a href="@Url.Action("AddDepartment", "Admin")" class="btn btn-primary">Add Department</a>
            </p>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>Department Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dept in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => dept.DEP_NAME)</td>
                                    <td>
                                        <a href="@Url.Action("EditDepartment", new { id = dept.DEP_ID })" class="btn btn-primary btn-sm me-1">Edit</a>
                                        <a href="@Url.Action("DeleteDepartment", new { id = dept.DEP_ID })" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center text-muted">No departments found.</p>
            }
        </div>
    </div>
</div>
@model StudentPortalSystemMVC.Models.TeacherDashboardViewModel
@{
    ViewBag.Title = "Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card p-4 mt-5 shadow-sm bg-light">
            <h2 class="text-center mb-4 text-primary">Welcome, @Model.Teacher.FIRST_NAME @Model.Teacher.LAST_NAME</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Success"]</div>
            }

            <!-- Personal Info -->
            <h3 class="mb-3 text-muted">Personal Information</h3>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.Teacher.EMAIL</p>
                    <p><strong>Contact:</strong> @(Model.Teacher.CONTACT ?? "N/A")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Address:</strong> @(Model.Teacher.ADDRESS ?? "N/A")</p>
                    <p><strong>Department:</strong> @Model.Department</p>
                </div>
            </div>

            <!-- Courses Teaching -->
            <h3 class="mb-3 text-muted">Courses Teaching</h3>
            @if (Model.Courses != null && Model.Courses.Any())
            {
                <div class="table-responsive mb-4">
                    <table class="table table-striped table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>Course Name</th>
                                <th>Credits</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.Courses)
                            {
                                <tr>
                                    <td>@course.COURSE_NAME</td>
                                    <td>@course.CREDITS</td>
                                    <td>
                                        <a href="@Url.Action("ManageAttendance", new { courseId = course.COURSE_ID })" class="btn btn-info btn-sm me-1">Manage Attendance</a>
                                        <a href="@Url.Action("ManageGrades", new { courseId = course.COURSE_ID })" class="btn btn-info btn-sm me-1">Manage Grades</a>
                                        <a href="@Url.Action("CourseReport", new { courseId = course.COURSE_ID })" class="btn btn-secondary btn-sm">View Report</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-4">No courses assigned.</p>
            }
        </div>
    </div>
</div>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="card p-4 shadow-sm">
        <h1 class="mb-4">Welcome to the University Portal System</h1>
        <p class="text-muted mb-4">Please select your role to proceed:</p>

        @using (Html.BeginForm("RedirectUser", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = true }))
        {
            <div class="form-group">
                <select name="userType" class="form-control d-inline-block w-auto" onchange="this.form.submit()" required>
                    <option value="">Select Role</option>
                    <option value="Admin">Admin</option>
                    <option value="Student">Student</option>
                    <option value="Teacher">Teacher</option>
                </select>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap form validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}